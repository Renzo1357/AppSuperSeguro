<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InviteFragment"
    android:background="@color/white"
    android:paddingLeft="30dp"
    android:paddingRight="30dp">

    <ImageView
        android:id="@+id/imageView01"
        android:layout_width="202dp"
        android:layout_height="202dp"
        android:src="@drawable/surprise"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"/>

    <TextView
        android:id="@+id/tvTitle"
        android:layout_below="@id/imageView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Invita a tus amigos y obten bonus"
        android:textSize="30sp"
        android:fontFamily="sans-serif-black"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/tvDescription"
        android:layout_below="@id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recomiendanos con tus amigos y conocidos, para poder acceder a promociones y bonificaciones"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"/>

    <ImageView
        android:id="@+id/imageView02"
        android:layout_below="@id/tvDescription"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="30dp"
        android:src="@drawable/fb" />

    <ImageView
        android:id="@+id/imageView03"
        android:layout_below="@id/tvDescription"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="40dp"
        android:layout_centerInParent="true"
        android:src="@drawable/wts" />

    <ImageView
        android:id="@+id/imageView04"
        android:layout_below="@id/tvDescription"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="40dp"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="30dp"
        android:src="@drawable/share" />

</RelativeLayout>